- @title = @user.name

h3.bold
  = fa_stacked_icon 'user inverse', base: 'circle', text: @user.name

- if current_user and @user.id == current_user.id
  = link_to edit_user_registration_path, class: 'btn btn-success' do
    = fa_icon 'pencil', text: 'Edit'
  p

ul.nav.nav-tabs
  li.active
    = link_to '#bots', 'data-toggle' => 'tab' do
      = fa_icon 'smile-o', text: 'Bots'
  li
    = link_to '#adapters', 'data-toggle' => 'tab' do
      = fa_icon 'random', text: 'Adapters'
  li
    = link_to '#scripts', 'data-toggle' => 'tab' do
      = fa_icon 'code', text: 'Scripts'

.tab-content
  .tab-pane.fade.active.in#bots
    - if @user.bots.empty?
      .alert.alert-warning 登録されているBotはありません。
    - else
      ul.list-group
        - @user.bots.each do |bot|
          li.list-group-item
            = link_to bot.name, bot_path( bot.id )
  .tab-pane.fade#adapters
    - if @user.adapters.empty?
      .alert.alert-warning 登録されているAdapterはありません。
    - else
      ul.list-group
        - @user.adapters.each do |adapter|
          li.list-group-item
            = link_to adapter.name, adapter_path( adapter.id )
  .tab-pane.fade#scripts
    - if @user.scripts.empty?
      .alert.alert-warning 登録されているScriptはありません。
    - else
      ul.list-group
        - @user.scripts.each do |script|
          li.list-group-item
            = link_to script.name, script_path( script.id )
